<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".navigation.ui.about_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F7F6FB">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aboutus_icon_circle"
                    android:layout_width="241dp"
                    android:layout_height="154dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/nacvhetna" />

                <TextView
                    android:id="@+id/title_aboutus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="About Us"
                    android:textAlignment="center"
                    android:textColor="#0E0E0E"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/aboutus_icon_circle" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_spym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_aboutus">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/aboutus_spym_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:text="SPYM"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="gone" />

                        <TextView
                            android:id="@+id/aboutus_spym_description"
                            android:layout_width="331dp"
                            android:layout_height="665dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/aboutus_spym"

                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/aboutus_spym_title" />

                        <ImageButton
                            android:id="@+id/aboutus_spym_website_link"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:background="@drawable/instagram"
                            android:contentDescription="@string/close"
                            app:layout_constraintBottom_toBottomOf="@+id/aboutus_spym_YT_link"
                            app:layout_constraintEnd_toStartOf="@+id/aboutus_spym_YT_link"
                            app:layout_constraintHorizontal_bias="0.603"


                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/aboutus_spym_YT_link"
                            app:layout_constraintVertical_bias="0.0"
                            tools:ignore="DuplicateSpeakableTextCheck" />

                        <ImageButton
                            android:id="@+id/aboutus_spym_YT_link"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/facebook"
                            android:contentDescription="@string/app_name"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/aboutus_spym_description"
                            app:layout_constraintHorizontal_bias="0.457"
                            app:layout_constraintStart_toStartOf="@+id/aboutus_spym_description"
                            app:layout_constraintTop_toBottomOf="@+id/aboutus_spym_description"
                            app:layout_constraintVertical_bias="0.0"
                            tools:ignore="DuplicateSpeakableTextCheck" />

                        <ImageButton
                            android:id="@+id/aboutus_spym_link3"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="28dp"
                            android:background="@drawable/youtube"
                            android:contentDescription="@string/app_name"
                            app:layout_constraintBottom_toBottomOf="@+id/aboutus_spym_YT_link"
                            app:layout_constraintStart_toEndOf="@+id/aboutus_spym_YT_link"
                            app:layout_constraintTop_toTopOf="@+id/aboutus_spym_YT_link"
                            app:layout_constraintVertical_bias="0.0"></ImageButton>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_iiitd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_spym">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="100dp">

                        <TextView
                            android:id="@+id/aboutus_iiitd_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="84dp"
                            android:layout_marginTop="16dp"
                            android:text="Devloped by IIITDian "
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/aboutus_iiitd_description"
                            android:layout_width="246dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="24dp"
                            android:text="Check out : DevTeam"
                            android:textColor="@color/colorAccent"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.487"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/aboutus_iiitd_title" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>